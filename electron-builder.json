{
    "productName": "AGRallye",
    "directories": {
        "output": "release/",
        "buildResources": "src/assets/icons/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
    "extraResources": [
        "src/assets/icons/icon.png"
    ],
    "win": {
        "icon": "dist/assets/icons",
        "target": [
            "nsis"
        ],
        "publish": ["github"]
    },
    "mac": {
        "icon": "dist/assets/icons",
        "target": [
            "dmg"
        ],
        "publish": ["github"]
    },
    "linux": {
        "icon": "dist/assets/icons",
        "target": [
            "AppImage"
        ],
        "publish": ["github"]
    }
}